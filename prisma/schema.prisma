generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Image {
  id           Int       @id @default(autoincrement())
  filename     String
  originalName String
  filePath     String
  fileSize     Int
  mimeType     String
  createdAt    DateTime  @default(now())
  Project      Project[]
}

model Project {
  id             Int      @id @default(autoincrement())
  name           String
  image          Image    @relation(fields: [imageId], references: [id])
  imageId        Int
  description    String
  about          String?
  url            String?
  techStack      String[]
  techDefinition String
  sourceUrl      String?
  roles          String[]
  owners         String[]
  duration       String
  createdAt      DateTime @default(now())
}
